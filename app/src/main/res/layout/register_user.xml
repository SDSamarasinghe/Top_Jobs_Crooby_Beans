<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".RegisterUserActivity">

    <RelativeLayout
        android:id="@+id/loginheader"
        android:layout_width="407dp"
        android:layout_height="87dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="93dp"
            android:layout_marginEnd="93dp"
            android:padding="10dp"
            android:src="@drawable/logo" />
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="parent">

    </LinearLayout>


    <RelativeLayout

        android:id="@+id/relativeLayout"
        android:layout_width="222dp"
        android:layout_height="634dp"
        android:layout_marginTop="109dp"
        android:background="@drawable/shadow_leftreg"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/loginheader"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/sign1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="18dp"
            android:gravity="center"
            android:fontFamily="@font/open_sans"
            android:text="@string/signup"
            android:textColor="@color/design_default_color_background"
            android:textSize="30sp"
            android:textStyle="bold" />


    </RelativeLayout>


    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="385dp"
        android:layout_height="525dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="117dp"
        android:layout_marginBottom="106dp"
        android:background="@drawable/white_logpanel"
        android:orientation="vertical"
        android:paddingRight="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/relativeLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/relativeLayout"
        app:layout_constraintVertical_bias="0.32"
        tools:ignore="MissingConstraints">


        <EditText
            android:id="@+id/et_name_reg"
            android:layout_width="296dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/border2"
            android:ems="10"
            android:hint="@string/et_user_name"
            android:inputType="textPersonName"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:textColor="@color/black"
            android:textColorHint="@color/ash"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_email_reg2"
            android:layout_width="296dp"
            android:layout_height="39dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/border2"
            android:ems="10"
            android:hint="@string/Email"
            android:inputType="textPersonName"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:textColor="@color/black"
            android:textColorHint="@color/ash"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_mobile"
            android:layout_width="296dp"
            android:layout_height="39dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/border2"
            android:ems="10"
            android:hint="@string/phone"
            android:inputType="textPersonName"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:textColor="@color/black"
            android:textColorHint="@color/ash"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/district_spinner"
            android:layout_width="296dp"
            android:layout_height="39dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/border2"
            android:ems="10"
            android:entries="@array/districts_sm"
            android:hint="@string/district"
            android:paddingStart="8dp"
            android:paddingTop="7dp"
            android:paddingEnd="15dp"
            android:textColor="@color/ash" />

        <Spinner
            android:id="@+id/gender_spinner"
            android:layout_width="296dp"
            android:layout_height="39dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/border2"
            android:ems="10"
            android:entries="@array/genderR"
            android:hint="@string/gender"
            android:paddingStart="8dp"
            android:paddingTop="7dp"
            android:paddingEnd="15dp"
            android:textColor="@color/ash" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="296dp"
            android:layout_height="39dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/border2"
            android:ems="10"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:textColor="@color/black"
            android:textColorHint="@color/ash"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="296dp"
            android:layout_height="39dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/border2"
            android:ems="10"
            android:hint="@string/repassword"
            android:inputType="textPassword"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:textColor="@color/black"
            android:textColorHint="@color/ash"
            android:textSize="16sp" />


    </LinearLayout>

    <TextView
        android:id="@+id/login1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/signin"
        android:fontFamily="@font/open_sans"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.172"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.179" />

    <Button
        android:id="@+id/btn_acCeate"
        android:layout_width="106dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginStart="50dp"
        android:fontFamily="@font/open_sans"
        android:layout_marginTop="480dp"
        android:layout_marginEnd="50dp"
        android:backgroundTint="@color/netblue"
        android:gravity="center"
        android:text="@string/signup"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout4"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>