<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#041d3a"
    tools:context=".Create_Job">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="-55dp"
            android:backgroundTint="#a8c0d3"
            android:layout_marginStart="20dp"
            android:src="@drawable/ic_baseline_arrow_back_24" />


        <ImageView
            android:layout_width="96dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="3dp"
            android:src="@drawable/nlogo" />

        <TextView
            android:id="@+id/job_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/open_sans"
            android:text="Web Developer"
            android:textColor="#8cdeea"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/topView"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="411dp"
            android:layout_height="213dp"
            android:layout_gravity="center"

            android:layout_marginTop="20dp"
            android:background="@drawable/social_rouded_input"
            android:src="@drawable/req_job_pic"
            app:layout_constraintBottom_toTopOf="@+id/textView8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/req_job_type_tv"
            app:layout_constraintVertical_bias="0.033" />

        <LinearLayout
            android:id="@+id/linearlayout_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/open_sans"
            android:orientation="horizontal"
            android:textAlignment="center">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="50dp"
                android:layout_height="28dp"
                android:layout_marginStart="28dp"
                android:fontFamily="@font/open_sans"
                android:text="Name"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintBaseline_toBaselineOf="@+id/textView8"
                app:layout_constraintEnd_toStartOf="@+id/textView8"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/imageView5" />


            <TextView
                android:id="@+id/textView9"
                android:layout_width="233dp"
                android:layout_height="25dp"
                android:backgroundTint="#a8c0d3"
                android:background="@drawable/social_rouded_input"
                android:textColor="#000000"
                app:layout_constraintBottom_toTopOf="@+id/textView10"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="35dp"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/textView5"
                app:layout_constraintTop_toBottomOf="@+id/textView8"
                app:layout_constraintVertical_bias="0.347" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayout_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearlayout_1"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/open_sans"
            android:orientation="horizontal"
            android:textAlignment="center">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="49dp"
                android:layout_height="25dp"
                android:layout_marginStart="24dp"
                android:fontFamily="@font/open_sans"
                android:text="@string/age_req"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintBaseline_toBaselineOf="@+id/textView9"
                app:layout_constraintEnd_toStartOf="@+id/textView9"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/imageView7" />


            <TextView
                android:id="@+id/req_v_age"
                android:layout_width="233dp"
                android:layout_height="25dp"
                android:layout_marginStart="40dp"
                android:backgroundTint="#a8c0d3"
                android:background="@drawable/social_rouded_input"
                android:textColor="#000000"
                app:layout_constraintBottom_toTopOf="@+id/textView10"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/textView5"
                app:layout_constraintTop_toBottomOf="@+id/textView8"
                app:layout_constraintVertical_bias="0.347" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearlayout_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearlayout_2"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/open_sans"
            android:orientation="horizontal"
            android:textAlignment="center">


            <TextView
                android:id="@+id/V_gender"
                android:layout_width="64dp"
                android:layout_height="match_parent"
                android:layout_marginStart="26dp"
                android:fontFamily="@font/open_sans"
                android:text="@string/gender_req"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintBaseline_toBaselineOf="@+id/textView9"
                app:layout_constraintEnd_toStartOf="@+id/textView9"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/imageView7" />

            <TextView
                android:id="@+id/req_v_gender"
                android:layout_width="233dp"
                android:layout_height="25dp"
                android:layout_marginStart="24dp"
                android:background="@drawable/social_rouded_input"
                android:textColor="#000000"
                app:layout_constraintBottom_toTopOf="@+id/textView10"
                android:backgroundTint="#a8c0d3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/textView5"
                app:layout_constraintTop_toBottomOf="@+id/textView8"
                app:layout_constraintVertical_bias="0.347" />


        </LinearLayout>









        <TextView
            android:id="@+id/textView6"
            android:layout_width="229dp"
            android:layout_height="26dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="33dp"
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/open_sans"
            android:text="Description and Qualifications"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView10"
            app:layout_constraintVertical_bias="0.0" />


        <TextView
            android:id="@+id/textView10"
            android:layout_width="310dp"
            android:layout_height="170dp"
            android:background="@drawable/social_rouded_input"
            android:textColor="#000000"
            android:layout_marginTop="-24dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView4"
            app:layout_constraintEnd_toEndOf="parent"
            android:backgroundTint="#a8c0d3"
            app:layout_constraintHorizontal_bias="0.541"
            android:layout_marginStart="30dp"
            app:layout_constraintStart_toEndOf="@+id/textView4"
            app:layout_constraintTop_toTopOf="@+id/textView4"
            app:layout_constraintVertical_bias="0.0" />

        <LinearLayout
            android:id="@+id/linearlayout_6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearlayout_5"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:textAlignment="center">

            <Button
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="13dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="30dp"
                android:backgroundTint="@color/netblue"
                android:gravity="center"
                android:text="@string/Phone"
                android:textColor="#FFFFFF" />

            <Button
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="13dp"
                android:layout_marginBottom="30dp"
                android:backgroundTint="@color/netblue"
                android:gravity="center"
                android:text="@string/email"
                android:textColor="#FFFFFF" />
        </LinearLayout>



    </LinearLayout>



</ScrollView>