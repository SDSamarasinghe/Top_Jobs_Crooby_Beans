<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".RequestJob">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="96dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="3dp"
            android:src="@drawable/nlogo"
            android:contentDescription="TODO"
            tools:ignore="ContentDescription" />
        <ImageView
            android:id="@+id/backimgR"
            android:layout_width="23dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="-30dp"
            android:layout_marginBottom="-20dp"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/back"
            tools:ignore="VectorDrawableCompat" />


        <TextView
            android:id="@+id/backimgR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/open_sans"
            android:text="Request a Job"
            android:textAlignment="center"
            android:textColor="#464B51"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/topView"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/et_job_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/open_sans"
            android:layout_marginEnd="16dp"
            android:autofillHints=""
            android:hint="@string/et_request_job"
            android:background="@drawable/social_rouded_input"
            android:ems="10"
            android:minHeight="48dp"
            android:paddingLeft="10dp"
            android:inputType="textPersonName"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/linmblack"
            android:textColorHint="#546E7A"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />



        <EditText
            android:id="@+id/et_nameR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:fontFamily="@font/open_sans"
            android:layout_marginStart="16dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="16dp"
            android:autofillHints=""
            android:background="@drawable/social_rouded_input"
            android:ems="10"
            android:minHeight="48dp"
            android:paddingLeft="10dp"
            android:hint="@string/et_nameR"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/linmblack"
            android:textColorHint="#546E7A"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />



        <EditText
            android:id="@+id/et_ageR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="15dp"
            android:inputType="number|textPersonName"
            android:layout_marginEnd="16dp"
            android:autofillHints=""
            android:background="@drawable/social_rouded_input"
            android:ems="10"
            android:minHeight="48dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:hint="@string/et_ageR"
            android:fontFamily="@font/open_sans"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/linmblack"
            android:textColorHint="#546E7A"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <Spinner
            android:id="@+id/spinner_genderR"
            android:layout_width="236dp"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/open_sans"
            android:layout_marginTop="15dp"
            android:background="@drawable/border2"
            android:entries="@array/genderR"
            android:textColor="#E8E3E3" />



        <EditText
            android:id="@+id/et_descriptionR"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/open_sans"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="16dp"
            android:autofillHints=""
            android:background="@drawable/social_rouded_input"
            android:ems="10"
            android:hint="@string/et_descriptionR"
            android:inputType="textMultiLine"
            android:minHeight="48dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/linmblack"
            android:textColorHint="#546E7A"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />




        <EditText
            android:id="@+id/et_emailR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/open_sans"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="16dp"
            android:autofillHints=""
            android:background="@drawable/social_rouded_input"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:minHeight="48dp"
            android:paddingLeft="10dp"
            android:hint="@string/et_emailR"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/linmblack"
            android:textColorHint="#546E7A"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />



        <EditText
            android:id="@+id/et_phone_noR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/open_sans"
            android:layout_marginEnd="16dp"
            android:background="@drawable/social_rouded_input"
            android:ems="10"
            android:minHeight="48dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:inputType="phone"
            android:hint="@string/et_phone_noR"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/linmblack"
            android:textColorHint="#546E7A"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/emailLabel" />


        <ImageButton
            android:id="@+id/image_add_imageR"
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:layout_marginTop="24dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginStart="110dp"
            android:padding="0dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_createR"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_phone_noR"
            app:layout_constraintVertical_bias="0.085"
            app:srcCompat="@drawable/baseline_add_circle_24"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:id="@+id/tv_add_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="-48dp"
            android:textColorHint="@color/black"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="144dp"
            android:text="@string/tv_add_image"
            android:fontFamily="@font/open_sans"
            android:textColor="@color/black"
            android:textSize="16sp"
            tools:ignore="MissingConstraints" />


        <ProgressBar
            android:id="@+id/progressBarR"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-217dp"
            android:layout_marginStart="177dp"
            app:layout_constraintBottom_toBottomOf="@+id/image_add_imageR"
            app:layout_constraintEnd_toEndOf="@+id/image_add_imageR"
            app:layout_constraintStart_toStartOf="@+id/image_add_imageR"
            app:layout_constraintTop_toTopOf="@+id/image_add_imageR" />

        <Button
            android:id="@+id/btn_createR"
            android:layout_width="181dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="95dp"
            android:layout_marginBottom="-160dp"
            android:backgroundTint="@color/netblue"
            android:text="@string/request_btn"
            android:textColor="#FFFFFF" />


    </LinearLayout>

</ScrollView>